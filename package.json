{
  "name": "facebook-pixel-hunt",
  "version": "0.2.4",
  "scripts": {
    "build": "cp manifest.prod.json manifest.json && npm run build:glean && rollup -c && npm run tailwind",
    "build:developer": "rollup -c --config-enable-developer-mode && npm run tailwind",
    "build:emulator": "rollup -c --config-enable-emulator-mode && npm run tailwind",
    "tailwind": "tailwindcss -o dist/tailwind.css",
    "dev": "cp manifest.dev.json manifest.json && npm run build:glean && npm run tailwind && npm-run-all --parallel dev:extension dev:webext",
    "dev:emulator": "npm-run-all --parallel dev:extension:emulator dev:webext",
    "lint": "npm run build && eslint . && npm run lint:glean",
    "package": "cp manifest.prod.json manifest.json && npm run build && npm run package:webext",
    "package:webext": "web-ext build",
    "package:developer": "cp manifest.dev.json manifest.json && npm run build:developer && npm run package:webext -- -c web-ext-config.dev.js -n developer.zip --overwrite-dest",
    "package:emulator": "npm run build:emulator && npm run package:webext -- -n emulator.zip --overwrite-dest",
    "build:glean": "npm run build:glean:metrics && npm run build:glean:docs",
    "build:glean:metrics": "glean translate ./metrics.yaml ./pings.yaml -f typescript -o src/generated",
    "build:glean:docs": "glean translate ./metrics.yaml ./pings.yaml -f markdown -o docs",
    "lint:glean": "glean glinter ./metrics.yaml ./pings.yaml",
    "start": "npm run build && web-ext run --target chromium",
    "test:integration": "npm run test:integration:webserver & ./scripts/integration-test.sh",
    "test:integration:webserver": "cd tests/integration/webarchive/localhost",
    "test:integration:jest": "jest ./tests/integration/",
    "dev:extension": "rollup -c --config-enable-developer-mode -w",
    "dev:extension:emulator": "rollup -c --config-enable-emulator-mode -w",
    "dev:webext": "web-ext run --target chromium --watch-file dist/background.js"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.17.10",
    "@babel/preset-typescript": "^7.16.7",
    "@mozilla/glean": "^1.0.0",
    "@mozilla/rally-sdk": "^0.9.14",
    "@mozilla/web-science": "^0.5.0",
    "@rollup/plugin-commonjs": "^21.0.3",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-replace": "^4.0.0",
    "@rollup/plugin-typescript": "^8.3.2",
    "@types/jest": "^27.4.1",
    "@types/selenium-webdriver": "^4.0.18",
    "@types/webextension-polyfill": "^0.8.2",
    "chromedriver": "^101.0.0",
    "csv-parse": "^5.0.4",
    "eslint": "^8.9.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "geckodriver": "^3.0.1",
    "get-stream": "^6.0.1",
    "globby": "^11.0.3",
    "http-server": "^14.1.0",
    "jest": "^27.5.1",
    "npm-run-all": "^4.1.5",
    "rollup": "^2.70.1",
    "rollup-plugin-copy": "^3.4.0",
    "selenium-webdriver": "^4.1.1",
    "tailwindcss": "^3.0.24",
    "ts-jest": "^27.1.3",
    "typescript": "^4.6.4",
    "web-ext": "^6.7.0",
    "webextension-polyfill": "^0.9.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "description": "Finding Facebook Pixels",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mozilla-rally/facebook-pixel-hunt.git"
  },
  "keywords": [],
  "author": "Mozilla",
  "license": "MPL-2.0",
  "private": true,
  "bugs": {
    "url": "https://github.com/mozilla-rally/facebook-pixel-hunt/issues"
  },
  "homepage": "https://github.com/mozilla-rally/facebook-pixel-hunt#readme"
}
